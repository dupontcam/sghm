[sqlfluff]
# Configuração para PostgreSQL
dialect = postgres

# Ignorar erros específicos que podem aparecer no VS Code
exclude_rules = L008,L003,L009,L010,L011,L016

# Configurações de formatação
max_line_length = 120
tab_space_size = 4

[sqlfluff:indentation]
indented_joins = true
indented_using_on = true
template_blocks_indent = true

[sqlfluff:rules]
# Configurações específicas para PostgreSQL
capitalisation_policy = upper
extended_capitalisation_policy = upper

[sqlfluff:rules:L010]
# Permitir nomes em maiúsculas para ENUMs
capitalisation_policy = consistent

[sqlfluff:rules:L014]
# Permitir nomes não qualificados para facilidade
unqualified_column_reference_policy = no_action